schema {
    query: Query
    mutation: Mutation
}

type Query {
    bookById(id: ID): Book
    authorById(id: ID): Author
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}

type Mutation {
    createBook(name: String!, pageCount: Int, author: InputAuthor): String
}


input InputAuthor {
    firstName: String
    lastName: String
}

